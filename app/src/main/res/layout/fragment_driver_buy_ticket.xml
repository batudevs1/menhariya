<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".MainActivity">


    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline6" app:layout_constraintGuide_begin="205dp"
                                                android:orientation="vertical"/>
    <TextView
            android:text="Start"
            android:layout_width="190dp"
            android:layout_height="55dp"
            android:id="@+id/textView20" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline6"
            android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="52dp"
            app:layout_constraintHorizontal_bias="0.0" android:gravity="center" android:textStyle="bold"
            android:textSize="18sp"/>
    <TextView
            android:text="Destination"
            android:layout_width="190dp"
            android:layout_height="55dp"
            android:id="@+id/textView21"
            app:layout_constraintStart_toStartOf="@+id/guideline6"
            android:layout_marginTop="52dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:gravity="center" android:textStyle="bold"
            android:textSize="18sp"/>
    <Button
            android:text="Buy"
            android:layout_width="209dp"
            android:layout_height="53dp"
            android:id="@+id/buy_btn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="384dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline3"
            app:layout_constraintVertical_bias="0.0" android:textColorLink="#00CA3F3F"
            android:textColor="@color/colorAccent" android:textStyle="bold"/>
    <EditText
            android:layout_width="190dp"
            android:layout_height="55dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/start_et"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView20"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline6"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="1.0" android:hint="Addis Ababa"/>
    <EditText
            android:layout_width="190dp"
            android:layout_height="55dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/destination_et"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline6" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView21"
            android:hint="Bahir Dar"/>
    <Button
            android:text="Set Date"
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:id="@+id/date_picker_btn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline6" android:layout_marginEnd="8dp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/start_et"
            app:layout_constraintHorizontal_bias="0.51"/>
    <Button
            android:text="Set Time"
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:id="@+id/time_picker_btn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline6" android:layout_marginStart="8dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/destination_et"
            app:layout_constraintHorizontal_bias="0.54"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline3" app:layout_constraintGuide_begin="273dp"
                                                android:orientation="horizontal"/>
</androidx.constraintlayout.widget.ConstraintLayout>