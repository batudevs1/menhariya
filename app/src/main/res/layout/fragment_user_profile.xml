<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".MainActivity">


    <TextView
            android:text="Welcome To our Service"
            android:layout_width="385dp"
            android:layout_height="55dp"
            android:id="@+id/textView11" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="56dp" app:layout_constraintHorizontal_bias="0.498" android:gravity="center"
            android:textSize="18sp"/>
    <TextView
            android:layout_width="385dp"
            android:layout_height="55dp"
            android:id="@+id/a_user_tv" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11" android:gravity="center" android:textSize="18sp"
            android:hint="Active user" app:layout_constraintHorizontal_bias="0.2"/>
    <Button
            android:text="Buy Ticket"
            android:layout_width="385dp"
            android:layout_height="65dp"
            tools:layout_editor_absoluteX="10dp" android:id="@+id/buy_ticket_btn" android:textSize="18sp"
            android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/a_user_tv"/>
</androidx.constraintlayout.widget.ConstraintLayout>