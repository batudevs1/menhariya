<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".MainActivity">


    <TextView
            android:text="Welcome to our Service"
            android:layout_width="385dp"
            android:layout_height="55dp"
            android:id="@+id/textView12" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="84dp" app:layout_constraintHorizontal_bias="0.8" android:gravity="center"
            android:textSize="18sp"/>
    <TextView
            android:layout_width="385dp"
            android:layout_height="55dp"
            android:id="@+id/d_user_name_tv" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            android:layout_marginTop="4dp" app:layout_constraintHorizontal_bias="0.8" android:gravity="center"
            android:hint="Driver Name"/>
    <Button
            android:text="Buy Ticket"
            android:layout_width="385dp"
            android:layout_height="65dp"
            android:id="@+id/d_buy_ticket_btn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.8" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/d_user_name_tv"/>
    <Button
            android:text="Available Seat"
            android:layout_width="385dp"
            android:layout_height="65dp"
            android:id="@+id/available_seat_btn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/d_buy_ticket_btn" app:layout_constraintHorizontal_bias="0.8"
            android:layout_marginTop="8dp"/>
    <Button
            android:text="Basic Info"
            android:layout_width="385dp"
            android:layout_height="65dp"
            android:id="@+id/basic_info_btn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.8" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/available_seat_btn"/>
</androidx.constraintlayout.widget.ConstraintLayout>