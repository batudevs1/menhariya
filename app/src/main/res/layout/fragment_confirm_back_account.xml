<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ConfirmBackAccount">


    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline7" app:layout_constraintGuide_begin="163dp"
                                                android:orientation="vertical"/>
    <TextView
            android:text="please confirm your account"
            android:layout_width="367dp"
            android:layout_height="65dp"
            android:id="@+id/textView24" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.714" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="96dp" android:gravity="center" android:textStyle="bold" android:textSize="24sp"/>
    <TextView
            android:text="Acc NO."
            android:layout_width="149dp"
            android:layout_height="55dp"
            android:id="@+id/textView25" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline7"
            android:layout_marginEnd="8dp" android:layout_marginTop="212dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:gravity="center" android:textSize="18sp"/>
    <EditText
            android:layout_width="237dp"
            android:layout_height="55dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/acc_conf_no_et"
            app:layout_constraintStart_toStartOf="@+id/guideline7" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
            android:hint="CBE:10004532092" android:layout_marginTop="212dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/password"
            android:layout_width="149dp"
            android:layout_height="55dp"
            android:id="@+id/textView26"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline7" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView25" android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="1.0" android:gravity="center" android:textSize="18sp"/>
    <EditText
            android:layout_width="237dp"
            android:layout_height="55dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/acc_password_et" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline7"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"
            android:hint="account password" app:layout_constraintTop_toBottomOf="@+id/acc_conf_no_et"
            android:layout_marginTop="8dp"/>
    <Button
            android:text="Confirm"
            android:layout_width="268dp"
            android:layout_height="55dp"
            android:id="@+id/acc_confirm_btn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.401" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView26"/>
